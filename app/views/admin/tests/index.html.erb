<h1><%=t('.registry') %></h1>
<br>
<%= link_to t('.new'), new_admin_test_path %>
<table>
  <tr>
    <th><%=t('.title') %></th>
    <th><%=t('.level') %></th>
    <th><%=t('admin.tests.show.category') %></th>
    <th><%=t('.author') %></th>
    <th><%=t('.questions') %></th>
    <th><%=t('.actions') %></th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= test.category.title %></td>
      <td><%= test.author&.name %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to t("show"), admin_test_path(test) %>
        <%= link_to t('delete'), admin_test_path(test), method: :delete, data: { confirm: t('sure') } %>
        </tr>
  <% end %>
</table>