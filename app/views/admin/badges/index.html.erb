<br>
<%= link_to t('.new'), new_admin_badge_path %>
<table class="table">
  <tr>
    <th scope="col">
      <%= t('.title') %>
    </th>
    <th scope="col"><%= t('admin.badge.index.kind') %></th>
    <th scope="col"><%= t('admin.badge.index.actions') %></th>

  </tr>
  <tbody>
  <% @badges.each do |badge| %>
    <tr>
      <td> <%= badge.title %></td>
      <td><%= t("admin.badge.index.kind#{badge.kind}") %></td>
      <td><%= link_to t("show"), admin_badge_path(badge) %>
        <%= link_to t('delete'), admin_badge_path(badge), method: :delete, data: { confirm: t('sure') } %>
        <%= link_to t('edit'), edit_admin_badge_path(badge)%>
    </tr>
  <% end %>
  </table>
<h1><%= @badge.title %>
  <span class="badge badge-pill badge-success">
  <%= image_tag @badge.image, size: "80x80" %>
  </span>
</h1>