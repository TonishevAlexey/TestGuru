<h1>Реестр тестов</h1>
<br>
<%= link_to 'Новый тест', new_test_path %>
<table>
  <tr>
    <th>Название</th>
    <th>Уровень</th>
    <th>Категория</th>
    <th>Автор</th>
    <th>Кол-во вопросов</th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= test.category.title %></td>
      <td><%= test.author&.name %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to 'Просмотреть', test_path(test) %></td>
      <td><%= link_to 'Удалить', test_path(test), method: :delete, data: { confirm: 'Эй! Ты уверен?' } %></td>
    </tr>
<% end %>
</table>