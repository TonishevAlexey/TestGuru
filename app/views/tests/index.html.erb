<h1><%=t('.registry') %></h1>
<br>
<table>
  <tr>
    <th><%=t('.title') %></th>
    <th><%=t('.level') %></th>
    <th><%=t('tests.index.сategory') %></th>
    <th><%=t('.author') %></th>
    <th><%=t('.questions') %></th>
    <th><%=t('.actions') %></th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= test.category.title %></td>
      <td><%= test.author&.name %></td>
      <td><%= test.questions.count %></td>
      <td>
        <% unless test.questions.empty? %>
          <%= button_to t('.start'), start_test_path(test) %></td>
        <% end %>
        </tr>
  <% end %>
</table>