<h1>Тест <%= @test.title %></h1>
<br>
<%= link_to 'Новый вопрос', new_test_question_path(@test) %>
<table>
  <tr>
    <th>Список вопросов</th>
  </tr>
  <% @test.questions.each do |questions| %>
    <tr>
    <td><%= questions.title %></td>
    <td><%= link_to 'Просмотреть', question_path(questions) %></td>
    <td> <%= link_to 'Удалить', question_path(questions), method: :delete, data: { confirm: 'Эй! Ты уверен?' } %></td>
    </tr>
  <% end %>
</table>
<p><%= link_to 'Редактировать тест', edit_test_path(@test) %></p>
<p><%= link_to 'Назад', tests_path %></p>


